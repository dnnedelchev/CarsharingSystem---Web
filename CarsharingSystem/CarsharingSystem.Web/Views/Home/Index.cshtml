@model IList<CarsharingSystem.Web.ViewModels.Travel.TravelInfoViewModel>
@using CarsharingSystem.Web.ViewModels.Travel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Заведи ме</h1>
    <p class="lead">Система за споделени пътувания.</p>
</div>

<div class="row">
    @for (int i = 0; i < Model.Count / 2 + (Model.Count % 2); i++)
    {
        <div class="col-md-6">
            @Html.Partial("_TravelBriefInfoPartial", Model[i * 2])
        </div>

        if ((Model.Count % 2 != 0) && ((i * 2) + 1 == Model.Count))
        {
            break;
        }

        <div class="col-md-6">
            @Html.Partial("_TravelBriefInfoPartial", Model[(i * 2) + 1])
        </div>
    }
</div>