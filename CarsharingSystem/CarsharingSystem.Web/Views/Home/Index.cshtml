@model IList<CarsharingSystem.Web.ViewModels.Travel.TravelInfoViewModel>
@using CarsharingSystem.Web.ViewModels.Travel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    @for (int i = 0; i < Model.Count / 2; i++)
    {
        <div class="col-md-6">
            @Html.Partial("_TravelBriefInfoPartial", Model[i * 2])
        </div>

        if ((Model.Count % 2 != 0) && ((i + 1) == Model.Count))
        {
            break;
        }

        <div class="col-md-6">
            @Html.Partial("_TravelBriefInfoPartial", Model[(i * 2) + 1])
        </div>
    }
</div>