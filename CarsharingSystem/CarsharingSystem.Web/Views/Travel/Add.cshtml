@model CarsharingSystem.Web.ViewModels.Travel.AddTravelViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

@using (Html.BeginForm("Add", "Travel", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m => m.Date)
        </div>
        <div class='col-md-5'>
            <input type='text' class="form-control" id='datetimepicker1' name="Date" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m => m.DestinationFrom)
        </div>
        <div class="col-md-5">
            @Html.EditorFor(m => m.DestinationFrom, new { @class = "form-control", @id = "DetinationFrom" })
        </div>
        
    </div>

    <div class="row col-md-offset-3">
        <div class="panel panel-default col-md-8" id="AddressFromPanel">
            <div class="panel-body" id="AddressFrom">
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m => m.DestinationTo)
        </div>
        <div class="col-md-5">
            @Html.EditorFor(m => m.DestinationTo, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m => m.VehicleId)
        </div>
        <div class="col-md-5">
            @Html.DropDownListFor(m => m.VehicleId, Model.Vehicles)
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Добави нов", "Add", "Vehicle", null, new { @class = "btn btn-default" } )
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-3">
            @Html.LabelFor(m => m.FreePlaces)
        </div>
        <div class="col-md-5">
            @Html.EditorFor(m => m.FreePlaces)
        </div>
    </div>

    <input type="submit"/>
}


@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker1').datetimepicker();
        });


        $('#DestinationFrom').focusout(function () {
            var param = "address=" + $('#DestinationFrom').val();

            jQuery.getJSON("/travel/ParseAddress", param, function (data) {
                var spanAddress = $("<span><strong>" + data.Address + "</strong></span>");
                $("#AddressFrom").append(spanAddress);
                $("#AddressFromPanel").show(1500);
                console.log(data);
            });

        })
    </script>

    @Scripts.Render("~/bundles/moment")
}

